@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>

<h2>Customers Index</h2>

<a asp-area="Admin" asp-controller="Home" asp-action="CreateUser" class="btn btn-primary">Create New Customer</a>
<button class="btn btn-secondary" onclick="printPage()">Print</button> <!-- Print Button -->

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>UserName</th>
            <th class="no-print">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td class="no-print">
                    <a asp-area="Admin" asp-controller="Home" asp-action="EditUser" asp-route-id="@user.Id">Edit</a>
                    <a asp-area="Admin" asp-controller="Home" asp-action="DeleteUser" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    @@media print {
        /* Hide everything except the table when printing */
        body * {
            visibility: hidden;
        }

        table, table * {
            visibility: visible;
        }

        table {
            position: absolute;
            top: 0;
            left: 0;
        }

        .no-print {
            display: none;
        }
    }
</style>

<script>
    function printPage() {
        window.print();
    }
</script>
