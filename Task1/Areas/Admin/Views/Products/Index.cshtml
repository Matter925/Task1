@model IEnumerable<Task1.Models.Product> // Change this line

@{
    ViewData["Title"] = "Products Index";
}

<h2>Products Index</h2>

<a asp-area="Admin" asp-controller="Products" asp-action="Create" class="btn btn-primary">Create New Product</a>
<button class="btn btn-secondary" onclick="printPage()">Print</button> <!-- Print Button -->
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Price</th>
            <th>Description</th>
            <th class="no-print">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Code</td>
                <td>@product.Price.ToString("C")</td> <!-- Format price as currency -->
                <td>@product.Description</td>
                <td class="no-print">
                    <a asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                    <a asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    @@media print {
        /* Hide everything except the table when printing */
        body * {
            visibility: hidden;
        }
        table, table * {
            visibility: visible;
        }
        table {
            position: absolute;
            top: 0;
            left: 0;
        }

        .no-print {
            display: none;
        }
    }
</style>

<script>
    function printPage() {
        window.print();
    }
</script>